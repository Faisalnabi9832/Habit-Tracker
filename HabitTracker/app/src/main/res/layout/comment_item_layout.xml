<!-- comment_item_layout.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <!-- Display existing comment's user profile and username -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- User Profile Image -->
        <ImageView
            android:id="@+id/existingUserProfileImageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/profilepic"
            android:scaleType="centerCrop"
            android:layout_marginEnd="8dp"/>

        <!-- Username -->
        <TextView
            android:id="@+id/existingUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Faisal Nabi"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Display the actual comment text -->
    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="wow nice"
        android:textSize="14sp"/>

</LinearLayout>
